<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { :class => 'form-signin' }) do |f| %>
  <h2 class='form-signin-heading'>Sign in</h2>
  <%= f.text_field :login, :class => 'input-block-level', :placeholder => 'Email / Username', :autofocus => true %>

  <%= f.password_field :password, :class => 'input-block-level', :placeholer => 'Password' %>

  <% if devise_mapping.rememberable? -%>
    <label class='checkbox'>
      <%= f.check_box :remember_me %> Remember me 
    </label>
  <% end -%>

  <%= f.submit "Sign in", :class => 'btn btn-large btn-primary' %>
<% end %>

<div class='devise-links'>
  <%= render "devise/shared/links" %>
</div>
